<h3> "Create a Song" </h3>
<%= form_for(@song) do |f|%>
    <% if @song.errors.any? %>
    <div id="error_explanation">
        <h2>There were some errors:</h2>
        <ul>
        <% @song.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    </div>
    <% end %>



    <%= f.label 'Title:'%><br>
    <%= f.text_field :title, @song.title %><br>
    <%= f.label 'Year:'%><br>
    <%= f.text_field :release_year, @song.release_year %><br>
    <%= f.label 'Artist:'%><br>
    <%= f.text_field :artist_name, @song.artist_name %><br>
    <%= f.label 'Genre:'%><br>
    <%= f.text_field :genre, @song.genre %><br>
    <%= f.submit %><br>
<% end %>